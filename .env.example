# ===========================================
# Portifolio Service 2024 - Environment Variables
# ===========================================

# Server Configuration
PORT=3000

# Database (MongoDB)
# Format: mongodb://user:password@host:port/database?authSource=admin
DATABASE_URL=mongodb://root:example@localhost:27017/portifolio?authSource=admin

# JWT Authentication
# Use a strong secret key for production
AUTH_SECRET=your_jwt_secret_key_here

# Cloudinary (Media Upload)
# Get these from https://cloudinary.com/console
CLOUD_NAME=your_cloudinary_cloud_name
CLOUD_API_KEY=your_cloudinary_api_key
CLOUD_API_SECRET=your_cloudinary_api_secret

# Resend (Email Service)
# Get these from https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_TO_EMAIL=your_email@example.com
